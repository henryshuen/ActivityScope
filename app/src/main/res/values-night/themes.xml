<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyActivityLauncher" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <item name="colorSecondary">@color/white</item>

        <item name="alertDialogTheme">@style/MyAlertDialog.Dark</item>
    </style>

    <style name="MyAlertDialog.Dark" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>