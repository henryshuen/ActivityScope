<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:paddingTop="@dimen/content_top_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Theme section title -->
        <TextView
            android:id="@+id/textThemeSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_theme_section"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Theme radio group -->
        <RadioGroup
            android:id="@+id/radioGroupTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_theme_system"
                android:textColor="@color/text_primary" />

            <RadioButton
                android:id="@+id/radioLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_theme_light"
                android:textColor="@color/text_primary" />

            <RadioButton
                android:id="@+id/radioDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_theme_dark"
                android:textColor="@color/text_primary" />

        </RadioGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <!-- About section title -->
        <TextView
            android:id="@+id/textAboutSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_about_section"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Author -->
        <TextView
            android:id="@+id/textAboutAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_about_author"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="6dp" />

        <!-- Based on -->
        <TextView
            android:id="@+id/textAboutBasedOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_about_based_on"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="6dp" />

        <!-- Source link -->
        <TextView
            android:id="@+id/textAboutSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_about_source"
            android:textSize="14sp"
            android:autoLink="web"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="10dp" />

        <!-- ChatGPT credit -->
        <TextView
            android:id="@+id/textAboutAi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_about_ai"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
